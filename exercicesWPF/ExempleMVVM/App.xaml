<Application x:Class="ExempleMVVM.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ExempleMVVM"
             xmlns:vw="clr-namespace:ExempleMVVM.View"
             xmlns:vm="clr-namespace:ExempleMVVM.ViewModel"
             StartupUri="View/MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type vm:VMMenu1}">
            <vw:UCMenu1/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:VMMenu2}">
            <vw:UCMenu2/>
        </DataTemplate>
    </Application.Resources>
</Application>
