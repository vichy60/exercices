<UserControl x:Class="Trombinoscope.UCEmployes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Trombinoscope"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <StackPanel>
            <Image Source="Image/employee.jpg" Width="150"/>
            <ListBox x:Name="lb_Empl"/>
        </StackPanel>
        <StackPanel>

            <TextBlock x:Name="tb_Id"/>
            <TextBlock x:Name="tb_Nom"/>
            <TextBlock x:Name="tb_Prenom"/>
        </StackPanel>


    </DockPanel>
</UserControl>
