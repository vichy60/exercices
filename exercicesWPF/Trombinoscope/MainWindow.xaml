<Window x:Class="Trombinoscope2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trombinoscope2"
         
         xmlns:resx="clr-namespace:Trombinoscope2.Properties"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="700">
        <!--rajouter le name space pour utiliser les variables du fichier ressource (les header des menus: Trombinoscope et Employes)-->
    
    <DockPanel>


        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="Menu_Tromb" Header="{x:Static resx:Resources.Menu_Tromb}"/>
            <MenuItem x:Name="Menu_Empl" Header="{x:Static resx:Resources.Menu_Empl}"/>
        </Menu>
        <ContentControl Name="contentCtrl"/>

    </DockPanel>


</Window>
